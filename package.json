{
  "name": "madinatul-uloom-core",
  "version": "0.0.1",
  "private": true,
  "description": "Modern Mosque Management Platform - Madinatul Uloom",
  "keywords": [
    "mosque",
    "masjid",
    "islamic",
    "community",
    "management"
  ],
  "license": "UNLICENSED",
  "author": "Madinatul Uloom",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rimraf node_modules",
    "db:generate": "pnpm --filter @madinatul-uloom/api db:generate",
    "db:push": "pnpm --filter @madinatul-uloom/api db:push",
    "db:migrate": "pnpm --filter @madinatul-uloom/api db:migrate",
    "db:studio": "pnpm --filter @madinatul-uloom/api db:studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.1"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
